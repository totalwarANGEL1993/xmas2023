	        <DamageClass>DC_Axe</DamageClass>
	        <DamageAmount>9</DamageAmount>	        
	        <MaxRandomDamageBonus>3</MaxRandomDamageBonus>
	        
	        <MaxRange>200</MaxRange>
	        <MinRange>0.0f</MinRange>
	        <AutoAttackRange>2000</AutoAttackRange>
	        
	        <BattleWaitUntil>1500</BattleWaitUntil>
	        
	        <HealingPoints>5</HealingPoints>
	        <HealingSeconds>3</HealingSeconds>
	        
		</Logic>
	</Behavior>

	<Behavior>
		  <Logic classname="GGL::CLimitedAttachmentBehaviorProperties">
			  <Class>GGL::CLimitedAttachmentBehavior</Class>
            <Attachment>
                <Type>ATTACHMENT_LEADER_SOLDIER</Type>
                <Limit>12</Limit>
            </Attachment>
		</Logic>
	</Behavior>
	
	<Behavior>
		  <Logic classname="GGL::CGLBehaviorPropsDying">
			  <Class>GGL::CGLBehaviorDying</Class>
			  <DyingTaskList>TL_DIE</DyingTaskList>
		</Logic>
